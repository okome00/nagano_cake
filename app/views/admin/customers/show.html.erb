<%# 管理者会員詳細画面 %>
<div class="container">
  <div class="row">
    <div class="col-md-auto mb-5 bg-light">
      <h3>会員詳細</h3>
    </div>
    <div class="col-md-8">
    </div>

    <div class="col-md-8 mx-auto">
      <table class="table table-borderless mb-5">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @customer.is_active == true %>
              <div class="text-success font-weight-bold">
                <%= '有効' %>
              </div>
            <% else %>
              <div class="text-muted font-weight-bold">
                <%= '退会' %>
              </div>
            <% end %>
          </td>
        </tr>
      </table>

      <div class="col-md-8 text-center mb-5">
        <%= link_to '編集する',  edit_admin_customer_path(@customer.id), class: 'btn btn-success mr-5' %>
        <%= link_to '注文履歴一覧を見る', admin_root_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>

