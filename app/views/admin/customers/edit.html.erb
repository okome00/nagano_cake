<%# 管理者会員編集画面 %>
<h3>会員情報編集</h3>

<%= form_with model: @customer, url: admin_customer_path do |f| %>

  <div class="form-group">
    <label for="customer_list">氏名</label>
    <%= f.text_field :last_name %>　<%= f.text_field :first_name %>
  </div>

  <div class="form-group">
    <label for="customer_list">フリガナ</label>
    <%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %>
  </div>

  <div class="form-group">
    <label for="customer_list">郵便番号</label>
    <%= f.text_field :postal_code %>
  </div>

  <div class="form-group">
    <label for="customer_list">住所</label>
    <%= f.text_field :address %>
  </div>

  <div class="form-group">
    <label for="customer_list">電話番号</label>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="form-group">
    <label for="customer_list">メールアドレス</label>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <label for="customer_list">会員ステータス</label>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, '有効', value: true %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, '退会', value: false %>
  </div>

  <div class="form-group">
    <%= f.submit '変更を保存' %>
  </div>

<% end %>
