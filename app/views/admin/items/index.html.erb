<%# 管理者商品一覧画面 %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-auto bg-light">
      <h3>商品一覧</h3>
    </div>
    <div class="col-11 text-right mb-3">
      <%= link_to new_admin_item_path do %>
        <button type="button" class="btn btn-light shadow bg-white rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
      <% end %>
    </div>

    <div class="col-md-12">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th></th>
            <th></th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id), class: 'link' %></td>
              <td><%= item.price.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <td></td>
              <td></td>
              <td>
                <% if item.is_active == true %>
                  <div class="text-success font-weight-bold">
                    <%= '販売中' %>
                  </div>
                <% else %>
                  <div class="text-muted font-weight-bold">
                    <%= '販売停止中' %>
                  </div>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="mx-auto mt-3">
      <%= paginate @items %>
    </div>
  </div>
</div>
