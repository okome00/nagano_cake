<%# 管理者商品詳細画面 %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <div class="col-md-auto mb-5 bg-light">
        <h3>商品詳細</h3>
      </div>
      <%= image_tag @item.get_image(200, 200) %>
    </div>

    <div class="col-md-8 offset-md-1">
      <div class="form-group mt-5">
      <label for="item_list">商品名</label><br />
        <%= @item.name %>
      </div>

      <div class="form-group">
      <label for="item_list">商品説明</label><br />
        <%= @item.introduction %>
      </div>

      <div class="form-group">
      <label for="item_list">ジャンル</label><br />
        <%= @item.genre.name %>
      </div>

      <div class="form-group">
      <label for="item_list">税込価格(税抜価格)</label><br />
        <%= (@item.price * 1.1).to_i.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円
      </div>

      <div class="form-group">
      <label for="item_list">販売ステータス</label><br />
        <% if @item.is_active == true %>
        <div class="text-success font-weight-bold">
          <%= '販売中' %>
        </div>
        <% else %>
        <div class="text-muted font-weight-bold">
          <%= '販売停止中' %>
        </div>
        <% end %>
      </div>

      <div class="form-group mb-5">
        <%= link_to '編集する',  edit_admin_item_path(@item.id), class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>
