<%# 管理者商品詳細画面 %>
<h1>商品詳細</h1>

<%# 商品詳細 %>
<%= image_tag @item.get_image(200, 200) %>

<div class="form-group">
<label for="item_list">商品名</label>
  <%= @item.name %>
</div>

<div class="form-group">
<label for="item_list">商品説明</label>
  <%= @item.introduction %>
</div>

<div class="form-group">
<label for="item_list">ジャンル</label>
  <%= @item.genre.name %>
</div>

<div class="form-group">
<label for="item_list">税込価格<br />(税抜価格)</label>
  <%= @item.add_tax_price.to_s(:delimited) %>（<%= @item.price %>）円
</div>

<div class="form-group">
<label for="item_list">販売ステータス</label>
  <% if @item.is_active == true %>
    <%= '販売中' %>
  <% else %>
    <%= '販売停止中' %>
  <% end %>
</div>

<div class="form-group">
  <%= link_to '編集する',  edit_admin_item_path(@item.id) %>
</div>
