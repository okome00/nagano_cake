<%# 管理者商品詳細画面 %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-2">
      <div class="col-md-auto mb-5 bg-light">
        <h3>商品詳細</h3>
      </div>
    </div>
    <div class="col-md-10">
    </div>

    <div class="col-md-5">
      <%= image_tag @item.get_image(350, 350) %>
    </div>

    <div class="col-md-5">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th>税込価格(税込価格)</th>
            <td><%= (@item.price * 1.1).to_i.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td>
              <% if @item.is_active == true %>
                <div class="text-success font-weight-bold">
                  <%= '販売中' %>
                </div>
              <% else %>
                <div class="text-muted font-weight-bold">
                  <%= '販売停止中' %>
                </div>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-5">
    </div>
    <div class="col-md-6 mb-5">
      <%= link_to '編集する',  edit_admin_item_path(@item.id), class: 'btn btn-success' %>
    </div>
  </div>
</div>
