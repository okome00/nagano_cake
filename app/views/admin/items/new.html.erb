<%# 管理者商品新規登録画面 %>
<div class="container">
  <div class="row">
    <div class="col-md-3 offset-md-1">
      <h4 class="bg-light mt-2 mb-3 text-center">商品新規登録</h4>
    </div>
    <div class="col-md-8"></div>
  </div>
  <br />

<%# 新規登録 %>
<%= form_with model: @item, url: admin_items_path do |f| %>

  <div class="form-group">
    <label for="item_list" style="width: 15%">商品画像</label>
      <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <label for="item_list" style="width: 15%">商品名</label>
      <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group" style="width: 15%">
    <label for="item_list">商品説明</label>
      <%= f.text_area :introduction, class: 'form-control' %>
  </div>

  <div class="form-group" style="width: 15%">
    <label for="item_list">ジャンル</label>
      <%= f.collection_select :genre_id, @genres, :id, :name, { prompt: '--選択してください--' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="item_list">税抜価格</label>
      <%= f.text_field :price, class: 'form-control' %> 円
  </div>

  <div class="form-group">
    <label for="item_list">販売ステータス</label>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, '販売中', value: true %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売停止中', value: false %>
  </div>

  <div class="form-group">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
  </div>

  <% end %>
</div>
