<%# 管理者商品編集画面 %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="row">
        <div class="col-md-auto mb-5 bg-light">
          <h3>商品編集</h3>
        </div>
      </div>

      <%= form_with model: @item, url: admin_item_path do |f| %>
        <div class="form-group">
          <%= f.label :商品画像 %><br />
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.label :商品名 %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :商品説明 %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :ジャンル %>
          <%= f.collection_select :genre_id, @genres, :id, :name, { prompt: '--選択してください--' }, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :税抜価格 %>
          <%= f.text_field :price, class: 'form-control' %> 円
        </div>

        <div class="form-group">
          <%= f.label :販売ステータス %><br />
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '販売中', value: true %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '販売停止中', value: false %>
        </div>

        <div class="form-group mb-5">
          <%= f.submit '変更を保存', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
