<%# 管理者商品編集画面 %>
<h1>商品編集</h1>

<%# 商品編集 %>
<%= form_with model: @item, url: admin_item_path do |f| %>

  <div class="form-group">
    <label for="item_list">商品画像</label>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <label for="item_list">商品名</label>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <label for="item_list">商品説明</label>
    <%= f.text_area :introduction %>
  </div>

  <div class="form-group">
    <label for="item_list">ジャンル</label>
    <%= f.collection_select :genre_id, @genres, :id, :name %>
  </div>

  <div class="form-group">
    <label for="item_list">税抜価格</label>
    <%= f.text_field :price %> 円
  </div>

  <div class="form-group">
    <label for="item_list">販売ステータス</label>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, '販売中', value: true %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, '販売停止中', value: false %>
  </div>

  <div class="form-group">
    <%= f.submit '変更を保存' %>
  </div>

<% end %>
