<%# 管理者用：ジャンル編集画面 %>
<div class="container">
  <div class="row">
    <div class="col-md-auto mb-5 bg-light">
      <h3>ジャンル編集</h3>
    </div>
    <div class="col-md-8">
    </div>

    <div class="col-md-8 mx-auto">
      <%= form_with model: @genre, url: admin_genre_path do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th>ジャンル名</th>
              <td><%= f.text_field :name %></td>
              <td><%= f.submit '変更を保存', class: 'btn btn-success' %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
