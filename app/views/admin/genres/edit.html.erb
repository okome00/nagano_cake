<%# 管理者用：ジャンル編集画面 %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-auto mb-5 bg-light">
      <h3>ジャンル編集</h3>
    </div>
  </div>

  <%# ジャンル編集 %>
  <%= form_with model: @genre, url: admin_genre_path do |f| %>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit '変更を保存', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>
