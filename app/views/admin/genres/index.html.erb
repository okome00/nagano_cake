<%# 管理者用：ジャンル管理画面（一覧・追加）%>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-auto mb-5 bg-light">
        <h3>ジャンル一覧・追加</h3>
    </div>
  </div>

  <%# ジャンル追加 %>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="col-md-6">
      <div class="form-group mb-5">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, placeholder: 'ジャンル名' %>
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>

  <%# ジャンル一覧 %>
  <div class="row">
    <div class="col-md-5">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="col-2"><%= genre.name %></td>
              <td class="col-1"><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success btn-sm-block' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
