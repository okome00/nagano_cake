<%# 管理者用：ジャンル管理画面（一覧・追加）%>
<h1>ジャンル一覧・追加</h1>

<%# ジャンル追加 %>
<%= form_with model: @genre, url: admin_genres_path do |f| %>

<div class="form-group">
  <label for="genre_list">ジャンル名</label>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
</div>

<% end %>

<%# ジャンル一覧 %>
<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to '編集する', edit_admin_genre_path(genre.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
