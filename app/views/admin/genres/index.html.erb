<%# 管理者用：ジャンル管理画面（一覧・追加）%>
<div class="container">
  <div class="row">
    <div class="col-md-auto mb-5 bg-light">
        <h3>ジャンル一覧・追加</h3>
    </div>
    <div class="col-md-8">
    </div>

    <div class="col-md-8 mx-auto">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th>ジャンル名</th>
              <td><%= f.text_field :name, placeholder: 'ジャンル名' %></td>
              <td><%= f.submit '新規登録', class: 'btn btn-success' %></td>
            </tr>
          </tbody>
        </table>
      <% end %>

      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="col-2"><%= genre.name %></td>
              <td class="col-1"><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success btn-sm-block' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
