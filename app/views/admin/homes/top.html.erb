<%# 管理者トップページ(注文履歴一覧) ※できたら※ %>
<h1>注文履歴一覧</h1>

<%# 注文履歴一覧 %>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.last_name + customer.first_name %></td>
      <td><%= order.amount %></td>
      <td>
      </td>
    </tr>
    <% end %>
  </tbody>
