<%# 管理者トップページ(注文履歴一覧) ※できたら※ %>
<h1>注文履歴一覧</h1>

<%# 注文履歴一覧 %>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= customer.last_name + customer.first_name %></td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_active == true %>
          <%= '有効' %>
        <% else %>
          <%= '退会' %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
