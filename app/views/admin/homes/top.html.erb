<%# 管理者トップページ(注文履歴一覧) ※できたら※ %>
<h1>注文履歴一覧</h1>

<%# 注文履歴一覧 %>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
      <td><%= order.customer.last_name + customer.customer.first_name %></td>
      <td><%= order.order_detail.sum(:amount) %></td>
      <td><%= order.order_status_i18n %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div><%= paginate @orders %><div>
