<%# 1ユーザーの注文履歴 ※できれば※ %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-auto mb-5 bg-light">
      <h3><%= @customer.last_name + @customer.first_name %>さんの注文履歴</h3>
    </div>

    <div class="col-md-12">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
            <td><%= order.order_detail.sum(:amount) %></td>
            <td><%= order.order_status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="mx-auto">
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>
