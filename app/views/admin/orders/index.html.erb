<%# 1ユーザーの注文履歴 ※できれば※ %>
<h3><%= @customer.last_name + @customer.first_name %>さんの注文履歴</h3>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
      <td><%= order.order_detail.sum(:amount) %></td>
      <td><%= order.order_status_i18n %></td>
      <td><></td>
    </tr>
  </tbody>
</table>

<div><%= paginate @orders %><div>
