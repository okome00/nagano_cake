<%# 管理者注文履歴詳細画面 %>
<h1>注文履歴詳細</h1>

<%# 注文履歴詳細 %>
<div class="form-group">
  <label for="order_list">購入者</label>
  <% link_to admin_customers_path(@order.id) do %>
    <%= @order.customer.name %>
</div>

<div class="form-group">
<label for="order_list">注文日</label>
  <%= @order.created_at.strftime('%Y/%m/%d') %>
</div>

<div class="form-group">
<label for="order_list">配送先</label>
  <%= @order.address %>
</div>

<div class="form-group">
<label for="order_list">支払方法</label>
  <%= @order.payment %>
</div>

<%= form_with model: @order, url: admin_order_path do |f| %>

  <div class="form-group">
  <label for="order_list">注文ステータス</label>
    <%= f.collection_select :order, %>
    <%= f.submit '更新' %>
  </div>
<% end %>

<%# 注文履歴詳細テーブル %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%= form_with model: @order, url: admin_order_path do |f| %>
    <tr>
      <td><%= @order_details.name %></td>
      <td><%= @order_details.price %></td>
      <td><%= @order_details.amount %></td>
      <td><%= %></td>
      <td><%= f.collection_select :order_details, %></td>
      <td><%= f.submit '更新' %></td>
    </tr>
  </tbody>
</table>

<div class="form-group">
  <label for="order_list">商品合計</label>
  <%= @order.total_price %>
</div>

<div class="form-group">
  <label for="order_list">送料</label>
  <%= @order.postage %>
</div>

<div class="form-group">
  <label for="order_list">請求金額</label>
  <%= @order. %>
</div>


