<%# 顧客注文履歴詳細画面 %>
<h3>注文履歴詳細</h3>

<p>
  <strong>注文情報</strong>
</p>

<table>
  <tbody>
    <tr>
      <th>注文日</th>
      <td><%= @order.create_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        <%= "〒" + @order.postal_code %>
        <%= @order.address %>
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.order_status_i18n %></td>
    </tr>
  </tbody>
</table>

<p>
  <strong>請求情報</strong>
</p>

<table>
  <tbody>
    <tr>
      <th>商品合計</th>
      <td><%= (@order.total_price - @order.postage).to_s(:delimited) %></td>
    </tr>
    <tr>
      <th>配送料</th>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td><%= @order.total_price.to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>

<p>
  <strong>注文内容</strong>
</p>

<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.price * order_detail.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
