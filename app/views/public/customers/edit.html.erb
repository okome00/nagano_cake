<%# 顧客会員情報編集画面 %>
<h3>会員情報編集</h3>

<%= form_with model: @customer, url: customers_path do |f| %>

  <div class="form-group">
    <%= f.label :氏名 %>
    <%= f.text_field :last_name %>　<%= f.text_field :first_name %>
  </div>

  <div class="form-group">
    <%= f.label :フリガナ %>
    <%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %>
  </div>

  <div class="form-group">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="form-group">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="form-group">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="form-group">
    <%= f.label :メールアドレス %>
    <%= f.text_field :email %>
  </div>

  <div class="form-group">
    <%= f.submit '編集内容を保存' %>
    <%= link_to '退会する', customers_unsubscribe_path %>
  </div>

<% end %>
