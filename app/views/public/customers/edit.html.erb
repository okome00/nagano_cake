<%# 顧客会員情報編集画面 %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="row">
        <div class="col-md-auto mb-5 bg-light">
          <h3>会員情報編集</h3>
        </div>
      </div>
      <div id="error_explanation">
        <% if @customer.errors.any? %>
          <h2><%= @customer.errors.count %> errors prohibited this user from being saved:</h2>
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @customer, url: customers_path do |f| %>
        <div class="form-group">
          <%= f.label :氏名 %><br />
          (姓)<%= f.text_field :last_name, class: 'form-control' %>
          (名)<%= f.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :フリガナ %><br />
          (セイ)<%= f.text_field :last_name_kana, class: 'form-control' %>
          (メイ)<%= f.text_field :first_name_kana, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :郵便番号 %>
          <%= f.text_field :postal_code, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :電話番号 %>
          <%= f.text_field :telephone_number, class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-group mb-5">
          <%= f.submit '編集内容を保存', class: 'btn btn-success mr-3' %>
          <%= link_to '退会する', customers_unsubscribe_path, class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
