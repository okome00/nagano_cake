<%# 顧客会員情報編集画面 %>
<div class="container">
  <div class="row">
    <div class="col-md-auto mb-5 bg-light">
      <h3>会員情報編集</h3>
    </div>
    <div class="col-md-8">
    </div>

    <div class="col-md-8 mx-auto">
      <div id="error_explanation">
        <% if @customer.errors.any? %>
          <h2><%= @customer.errors.count %> errors prohibited this user from being saved:</h2>
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @customer, url: customers_path do |f| %>
        <table class="table table-borderless mb-5">
          <tbody>
            <tr>
              <th>氏名</th>
              <td>
                (姓)<%= f.text_field :last_name, class: 'form-control' %>
                (名)<%= f.text_field :first_name, class: 'form-control' %>
              </td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td>
                (セイ)<%= f.text_field :last_name_kana, class: 'form-control' %>
                (メイ)<%= f.text_field :first_name_kana, class: 'form-control' %>
              </td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td><%= f.text_field :postal_code, class: 'form-control' %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= f.text_field :address, class: 'form-control' %></td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td><%= f.text_field :telephone_number, class: 'form-control' %></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.text_field :email, class: 'form-control' %></td>
            </tr>
          </tbody>
        </table>

        <div class="col-md-11 text-center  mb-5">
          <%= f.submit '編集内容を保存', class: 'btn btn-success mr-5' %>
          <%= link_to '退会する', customers_unsubscribe_path, class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
