<%# 顧客配送先編集画面 %>
<div class="container">
  <div class="row">
    <div class="col-md-auto mb-5 bg-light">
      <h3>配送先編集</h3>
    </div>
    <div class="col-md-8">
    </div>

    <div class="col-md-8 mx-auto">
      <div id="error_explanation">
        <% if @address.errors.any? %>
          <h2><%= @address.errors.count %> errors prohibited this user from being saved:</h2>
          <ul>
            <% @address.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @address do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th>郵便番号</th>
              <td><%= f.text_field :postal_code, class: 'form-control' %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= f.text_field :address, class: 'form-control' %></td>
            </tr>
            <tr>
              <th>宛名</th>
              <td><%= f.text_field :name, class: 'form-control' %></td>
            </tr>
          </tbody>
        </table>

        <div class="col-md-8 text-center mx-auto">
          <%= f.submit '変更内容を保存', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
