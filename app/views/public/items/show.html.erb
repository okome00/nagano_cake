<%# 顧客商品詳細画面 %>

<%# ジャンル検索　※できれば %>
<%= render 'public/search', genres: @genres %>

<%= image_tag @item.get_image(200, 200) %>

<h5><%= @item.name %></h5>
<%= @item.introduction %>
<%= (@item.price * 1.1).to_i.to_s(:delimited) %>(税込)

<%= form_with model: @cart_item, url: cart_items_path do |f| %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.select :amount, *[1..10], {include_blank: '--個数選択--'} %>
  <%= f.submit 'カートに入れる' %>
<% end %>