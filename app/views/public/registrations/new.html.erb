<%# 顧客Sign_up画面 %>
<div class="container">
  <div class="row">
    <div class="col-md-auto mb-5 bg-light">
      <h3>新規会員登録</h3>
    </div>
    <div class="col-md-8">
    </div>

    <div class="col-md-8 mx-auto">
      <div id="error_explanation">
        <% if @customer.errors.any? %>
          <h2><%= @customer.errors.count %> errors prohibited this user from being saved:</h2>
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th>名前</th>
              <td>
                (姓)<%= f.text_field :last_name, placeholder: '令和', class: 'form-control' %>
                (名)<%= f.text_field :first_name, placeholder: '道子', class: 'form-control' %>
              </td>
            </tr>
            <tr>
              <th>フリガナ</th>
              <td>
                (セイ)<%= f.text_field :last_name_kana, placeholder: 'レイワ', class: 'form-control' %>
                (メイ)<%= f.text_field :first_name_kana, placeholder: 'ミチコ', class: 'form-control' %>
              </td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%= f.email_field :email, placeholder: 'sample@example.com', class: 'form-control' %></td>
            </tr>
            <tr>
              <th>郵便番号(ハイフンなし)</th>
              <td><%= f.text_field :postal_code, placeholder: '0000000', class: 'form-control' %></td>
            </tr>
            <tr>
              <th>住所</th>
              <td><%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0', class: 'form-control' %></td>
            </tr>
            <tr>
              <th>電話番号(ハイフンなし)</th>
              <td><%= f.text_field :telephone_number, placeholder: '00000000000', class: 'form-control' %></td>
            </tr>
            <tr>
              <th>
                パスワード
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
                <% end %>
                </th>
              <td><%= f.password_field :password, class: 'form-control' %></td>
            </tr>
            <tr>
              <th>パスワード(確認用)</th>
              <td><%= f.password_field :password_confirmation, class: 'form-control' %></td>
            </tr>
          </tbody>
        </table>

        <div class="col-md-12 text-center mb-5">
          <%= f.submit '新規登録', class: 'btn btn-success' %>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-auto mb-2 bg-light">
          <p>既に登録済みの方</p>
        </div>
      </div>
      <div class="inline-block">
        <%= render "public/shared/links" %> からログインしてください。
      </div>
    </div>
  </div>
</div>

