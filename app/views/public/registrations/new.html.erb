<%# 顧客Sign_up画面 %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="row">
        <div class="col-md-auto mb-5 bg-light">
          <h3>新規会員登録</h3>
        </div>
      </div>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group">
          <%= f.label :名前 %><br />
          (姓)<%= f.text_field :last_name, placeholder: '令和', class: 'form-control' %>
          (名)<%= f.text_field :first_name, placeholder: '道子', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :フリガナ %><br />
          (セイ)<%= f.text_field :last_name_kana, placeholder: 'レイワ', class: 'form-control' %>
          (メイ)<%= f.text_field :first_name_kana, placeholder: 'ミチコ', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, placeholder: 'sample@example.com', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :郵便番号 %>(ハイフンなし)
          <%= f.text_field :postal_code, placeholder: '0000000', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :電話番号 %>(ハイフンなし)
          <%= f.text_field :telephone_number, placeholder: '00000000000', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %>(確認用)
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit '新規登録', class: 'btn btn-success' %>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-auto mb-2 bg-light">
          <p>既に登録済みの方</p>
        </div>
      </div>
      <div class="row mb-5">
        <%= render "public/shared/links" %> からログインしてください。
      </div>
    </div>
  </div>
</div>

