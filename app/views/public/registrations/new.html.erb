<%# 顧客Sign_up画面 %>
<h3>新規会員登録</h3>

<%# form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>
    (姓)<%= f.text_field :last_name, placeholder: 'てすと' %>
    (名)<%= f.text_field :first_name, placeholder: '素子' %>
  </div>

  <div class="field">
    <%= f.label :フリガナ %>
    (セイ)<%= f.text_field :last_name_kana, placeholder: 'テスト' %>
    (メイ)<%= f.text_field :first_name_kana, placeholder: 'モトコ' %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, placeholder: 'customer@customer' %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>(ハイフンなし)
    <%= f.text_field :postal_code, placeholder: '0000000' %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, placeholder: '北海道' %>
  </div>

  <div class="field">
    <%= f.label :電話番号 %>(ハイフンなし)
    <%= f.text_field :telephone_number, placeholder: '00000000000' %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>(確認用)
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit '新規登録' %>
  </div>
<% end %>

<h3>既に登録済みの方</h3>
<%= render "public/shared/links" %> からログインしてください。
